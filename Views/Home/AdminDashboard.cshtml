@{
    ViewData["Title"] = "Admin Page";
}

<div class="d-flex justify-content-between align-items-center mt-3 pl-5 pr-5 mr-5 ml-5">
    <h1><a class="text-body text-decoration-none display-4" href="/admin/dashboard">RecordStoreAdmin</a></h1>
    <div class="align-items-center d-flex">
        <h3>Welcome @ViewBag.LoggedInUser.FirstName!</h3>
        <h5><a class="ml-4 text-body text-decoration-none" href="/home">Main Site</a></h5>
        <h5><a class="ml-4 text-body text-decoration-none" href="/logout">Logout</a></h5>
    </div>
</div>
<hr>

<div class="d-flex container mt-3">
    <div>
        <div class="mr-5">
            <form action="/admin/choice" method="post">
                <input type="hidden" name="Choice" value="Orders">
                <input type="submit" class="no-button mt-2" value="All Orders">
            </form>
            <form action="/admin/choice" method="post">
                <input type="hidden" name="Choice" value="Records">
                <input type="submit" class="no-button mt-3 mb-3" value="All Records">
            </form>
        </div>
        <a class="text-body text-decoration-none large-link" href="/records/new">New Record</a>
    </div>
    <div class="mt-3 table-responsive">
        @{
            if (ViewBag.Choice == "Orders")
            {
                <partial name="OrdersPartial" view-data="ViewData" />
            }
            else if (ViewBag.Choice == "Records")
            {
                <partial name="RecordsPartial" view-data="ViewData" />
            }
        }
    </div>
</div>
