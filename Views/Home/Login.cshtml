@{
    ViewData["Title"] = "Login";
}

@model LoginUser

<div class="d-flex justify-content-between align-items-center mt-3 pl-5 pr-5 mr-5 ml-5">
    <h1><a class="text-body text-decoration-none display-4" href="/home">RecordStore</a></h1>
    <div class="text-center d-flex">
        @{
            if (ViewBag.LoggedInUser == null)
            {
                <div>
                    <a class="btn btn-dark" href="/register">Register</a>
                    <a class="btn btn-dark ml-4" href="/login">Login</a>
                </div>
            }
            else
            {
                <h3>Welcome @ViewBag.LoggedInUser.FirstName!</h3>
                <h5><a class="ml-4 text-dark" href="/users/myorders/@ViewBag.LoggedInUser.UserId"><u>My Orders</u></a></h5>
                <h5><a class="ml-4 text-body text-decoration-none" href="/logout">Logout</a></h5>
            }
        }
    </div>
</div>
<hr>

<div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="card" style="border-radius: 15px;">
                    <div class="card-body p-3">
                        <h2 class="text-center mb-3">Login to your account</h2>
                        <form action="/users/login" method="post">
                            <div class="form-outline mb-2">
                                <label class="form-label" for="LoginEmail">Email</label>
                                <input asp-for="LoginEmail" class="form-control form-control-lg" />
                                <span class="text-danger" asp-validation-for="LoginEmail"></span>
                            </div>
                            <div class="form-outline mb-3">
                                <label class="form-label" for="LoginPassword">Password</label>
                                <input asp-for="LoginPassword" class="form-control form-control-lg" />
                                <span class="text-danger" asp-validation-for="LoginPassword"></span>
                            </div>
                            <div class="d-flex justify-content-center">
                                <input type="submit" class="btn btn-dark" value="Login">
                            </div>
                            <p class="text-center text-muted mt-3 mb-0">Need an account? <a href="/register"
                                    class="fw-bold text-body"><u>Register here</u></a></p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>