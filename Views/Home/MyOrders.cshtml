@{
    ViewData["Title"] = "My Orders";
}

<div class="d-flex justify-content-between align-items-center mt-3 pl-5 pr-5 mr-5 ml-5">
    <h1><a class="text-body text-decoration-none display-4" href="/home">RecordStore</a></h1>
    <div class="text-center d-flex">
        <h3>Welcome @ViewBag.LoggedInUser.FirstName!</h3>
        <div class="d-flex align-items-center">
            <h5><a class="ml-4 text-body text-decoration-none" href="/home">Home</a></h5>
            <h5><a class="ml-4 text-body text-decoration-none" href="/logout">Logout</a></h5>
        </div>
    </div>
</div>
<hr>

<div class="container w-50">
    <h2 class="mb-3">My Orders</h2>
    @foreach (Order o in ViewBag.LoggedInUser.MyOrders)
    {
        <div class="card rounded-3 mb-4">
            <div class="card-body p-4">
                <div class="row d-flex justify-content-between align-items-center">
                    <div class="col-md-2 col-lg-2 col-xl-2">
                        <img src="@o.Record.Cover" class="img-fluid rounded-3" alt="@o.Record.Title">
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-3">
                        <h4 class="card-title mb-2">@o.Record.Title</h4>
                        <h5>@o.Record.Artist</h5>
                    </div>
                    <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                        <h5>Qty: @o.QuantityBought</h5>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                        <h4 class="mb-0">$@o.OrderTotal</h4>
                    </div>
                </div>
                <hr>
                <h6>Ordered On: @o.CreatedAt.ToString("MMMM dd, yyyy")</h6>
            </div>
        </div>
    }
</div>
